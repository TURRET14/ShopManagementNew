<UserControl xaml:Class="ShopManagement.Message" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Opacity="0.9" Background="{StaticResource Background_Primary}"></Border>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource Background_Secondary}" CornerRadius="20" BorderThickness="1" BorderBrush="{StaticResource Background_Cards}" Padding="20" MaxWidth="800">
            <StackPanel>
                <TextBlock Name="TextBlock_DialogHeader" TextWrapping="Wrap" FontSize="30"></TextBlock>
                <TextBlock Name="TextBlock_DialogText" TextWrapping="Wrap" Margin="0 10 0 0"></TextBlock>
                <Button Name="Button_Ok" Click="Button_Ok_Click" HorizontalAlignment="Stretch" Padding="5" Margin="0 10 0 0">Ок</Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
