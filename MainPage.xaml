<UserControl xaml:Class="ShopManagement.MainPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Магазин" FontSize="40" Margin="10"></TextBlock>
            <Button Name="Button_UserInfo" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" FontSize="40" Margin="10" Style="{StaticResource Button_Menu}" Click="TextBlock_UserInfo_Click"></Button>
            <Popup Name="Popup_UserInfo" PlacementTarget="{Binding ElementName=Button_UserInfo}" StaysOpen="False" Placement="Bottom" Width="{Binding ElementName=Button_UserInfo, Path=ActualWidth}" AllowsTransparency="True">
                <Border Padding="10" CornerRadius="10" BorderThickness="1" BorderBrush="{StaticResource Background_Cards}">
                    <Button Click="Button_Click">Выйти</Button>
                </Border>
            </Popup>
        </Grid>
        <Grid Grid.Row="1" Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                <Button Name="Button_Orders" Click="Button_Orders_Click" Style="{StaticResource Button_Menu}" HorizontalContentAlignment="Left">Заказы</Button>
                <Button Name="Button_SupplierOrders" Click="Button_SupplierOrders_Click" Style="{StaticResource Button_Menu}" Margin="0 10 0 0" HorizontalContentAlignment="Left">Закупки</Button>
                <Button Name="Button_Products" Click="Button_Products_Click" Style="{StaticResource Button_Menu}" Margin="0 10 0 0" HorizontalContentAlignment="Left">Товары</Button>
                <Button Name="Button_Customers" Click="Button_Customers_Click" Style="{StaticResource Button_Menu}" Margin="0 10 0 0" HorizontalContentAlignment="Left">Клиенты</Button>
                <Button Name="Button_Suppliers" Click="Button_Suppliers_Click" Style="{StaticResource Button_Menu}" Margin="0 10 0 0" HorizontalContentAlignment="Left">Поставщики</Button>
                <Button Name="Button_Employees" Click="Button_Employees_Click" Style="{StaticResource Button_Menu}" Margin="0 10 0 0" HorizontalContentAlignment="Left">Сотрудники</Button>
                <Button Name="Button_Reports" Style="{StaticResource Button_Menu}" Margin="0 10 0 0" HorizontalContentAlignment="Left" Visibility="Hidden">
                    <Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
                        <MenuItem Header="Отчеты" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Foreground="{StaticResource Main_Foreground}">
                            <MenuItem Header="По Заказам">
                                <MenuItem Header="По Клиентам"></MenuItem>
                                <MenuItem Header="По Сотрудникам"></MenuItem>
                            </MenuItem>
                            <MenuItem Header="По Закупкам">
                                <MenuItem Header="По Клиентам"></MenuItem>
                                <MenuItem Header="По Сотрудникам"></MenuItem>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </Button>
            </StackPanel>
            <Border Name="ContentControl_ForTables" Grid.Row="0" Grid.Column="1" Background="{StaticResource Background_Cards}" CornerRadius="20 0 0 0">
            </Border>
        </Grid>
    </Grid>
</UserControl>
