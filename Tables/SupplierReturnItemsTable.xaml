<UserControl xaml:Class="ShopManagement.Tables.SupplierReturnItemsTable" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Back_Click" Style="{StaticResource Button_Menu}">←Назад</Button>
        <Border Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="20" Padding="10" Margin="0 10 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Деталь Закупки" FontSize="30"></TextBlock>
                <Button Name="ActionsPanel" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Delete_Click" Margin="0 10 0 0">Удалить</Button>
                <DataGrid Grid.Row="2" Name="DataGrid_Header" AutoGenerateColumns="False" HeadersVisibility="Column" HorizontalAlignment="Stretch" VerticalAlignment="Top" ColumnWidth="Auto" IsReadOnly="True" HorizontalScrollBarVisibility="Disabled" Margin="0 10 0 0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"></DataGridTextColumn>
                        <DataGridTextColumn Header="Продукт" Binding="{Binding Product.NameId}" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="Auto"></DataGridTextColumn>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Amount}" Width="Auto"></DataGridTextColumn>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding TotalCost}" Width="Auto"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <TextBlock Grid.Row="2" Text="Состав Возврата" Margin="0 10 0 0" FontSize="30"></TextBlock>
        <Button Name="Button_Create"  Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Create_Click" Margin="0 10 0 0">+Создать</Button>

        <Border Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" CornerRadius="20" Padding="10" Margin="0 10 0 0">
            <Grid Grid.Row="4" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Поиск" FontSize="30"></TextBlock>

                <CheckBox Name="CheckBox_Amount" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Количество</CheckBox>
                <Grid Grid.Row="1" Grid.Column="1" Margin="10 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Center">От</TextBlock>
                    <TextBox Name="TextBox_AmountBegin" Grid.Column="1" Margin="10 0 0 0"></TextBox>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Center" Margin="10 0 0 0">До</TextBlock>
                    <TextBox Name="TextBox_AmountEnd" Grid.Column="3" Margin="10 0 0 0"></TextBox>
                </Grid>

                <CheckBox Name="CheckBox_EmployeeName" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Сотрудник</CheckBox>
                <TextBox Name="TextBox_EmployeeName" Grid.Row="2" Grid.Column="1" Margin="10 10 0 0"></TextBox>

                <CheckBox Name="CheckBox_Reason" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Причина</CheckBox>
                <TextBox Name="TextBox_Reason" Grid.Row="3" Grid.Column="1" Margin="10 10 0 0"></TextBox>

                <CheckBox Name="CheckBox_Date" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Дата</CheckBox>
                <Grid Grid.Row="4" Grid.Column="1" Margin="10 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Center">От</TextBlock>
                    <DatePicker Name="DatePicker_DateBegin" Grid.Column="1" Margin="10 0 0 0"></DatePicker>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Center" Margin="10 0 0 0">До</TextBlock>
                    <DatePicker Name="DatePicker_DateEnd" Grid.Column="3" Margin="10 0 0 0"></DatePicker>
                </Grid>

                <Button Grid.Row="5" Grid.ColumnSpan="2" Click="Button_Filter_Click" Margin="0 10 0 0">Найти</Button>
            </Grid>
        </Border>

        <DataGrid Grid.Row="5" Name="DataGrid_Table" AutoGenerateColumns="False" HeadersVisibility="Column" HorizontalAlignment="Left" VerticalAlignment="Top" ColumnWidth="Auto" IsReadOnly="True" HorizontalScrollBarVisibility="Disabled" Margin="0 10 0 0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество" Binding="{Binding Amount}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalCost}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee.NameId}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding LocalDate}" Width="Auto"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGrid_Table_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</UserControl>
