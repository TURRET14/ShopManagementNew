<UserControl xaml:Class="ShopManagement.Tables.EmployeesTable" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Все Сотрудники"></TextBlock>
        <Button Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Create_Click" Margin="0 10 0 0">+Создать</Button>
        <Border Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="20" Padding="10" Margin="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="500"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Поиск"></TextBlock>

                <CheckBox Name="CheckBox_Name" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">Имя</CheckBox>
                <TextBox Name="TextBox_Name" Grid.Row="1" Grid.Column="1"></TextBox>

                <CheckBox Name="CheckBox_Age" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Возраст</CheckBox>
                <Grid Grid.Row="2" Grid.Column="1" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Center">От</TextBlock>
                    <TextBox Name="TextBox_AgeBegin" Grid.Column="1"></TextBox>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Center">До</TextBlock>
                    <TextBox Name="TextBox_AgeEnd" Grid.Column="3"></TextBox>
                </Grid>

                <CheckBox Name="CheckBox_Gender" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Пол</CheckBox>
                <ComboBox Name="ComboBox_Gender" Grid.Row="3" Grid.Column="1" Margin="0 10 0 0"></ComboBox>

                <CheckBox Name="CheckBox_PhoneNumber" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Телефон</CheckBox>
                <TextBox Name="TextBox_PhoneNumber" Grid.Row="4" Grid.Column="1" Margin="0 10 0 0"></TextBox>

                <CheckBox Name="CheckBox_Email" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Почта</CheckBox>
                <TextBox Name="TextBox_Email" Grid.Row="5" Grid.Column="1" Margin="0 10 0 0"></TextBox>

                <CheckBox Name="CheckBox_Experience" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Опыт</CheckBox>
                <Grid Grid.Row="6" Grid.Column="1" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Center">От</TextBlock>
                    <TextBox Name="TextBox_ExperienceBegin" Grid.Column="1"></TextBox>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Center">До</TextBlock>
                    <TextBox Name="TextBox_ExperienceEnd" Grid.Column="3"></TextBox>
                </Grid>

                <CheckBox Name="CheckBox_Position" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0 10 0 0">Должность</CheckBox>
                <ComboBox Name="ComboBox_Position" Grid.Row="7" Grid.Column="1" Margin="0 10 0 0"></ComboBox>

                <Button Grid.Row="8" Grid.ColumnSpan="2" Click="Button_Filter_Click" Margin="0 10 0 0">Найти</Button>
            </Grid>
        </Border>

        <DataGrid Grid.Row="3" Name="DataGrid_Table" AutoGenerateColumns="False" HeadersVisibility="Column" HorizontalAlignment="Stretch" VerticalAlignment="Top" ColumnWidth="Auto" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" HorizontalScrollBarVisibility="Disabled" Margin="0 10 0 0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Почта" Binding="{Binding Email}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Опыт" Binding="{Binding Experience}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Должность" Binding="{Binding ReadablePosition}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Зарплата" Binding="{Binding Salary}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Логин" Binding="{Binding UserLogin}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGrid_Table_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</UserControl>
