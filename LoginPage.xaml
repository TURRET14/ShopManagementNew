<UserControl xaml:Class="ShopManagement.LoginPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/ShoppingCart.png" TileMode="Tile" Stretch="Uniform" Viewport="100 100 200 200" ViewportUnits="Absolute" AlignmentX="Center" AlignmentY="Center" Opacity="0.05"></ImageBrush>
        </Border.Background>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="20" Padding="20">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/ShoppingBag.png" Width="50"></Image>
                    <TextBlock Text="Магазин - Вход" FontSize="50" Margin="10 0 0 0"></TextBlock>
                </StackPanel>
                <TextBlock Text="Логин" Margin="0 5 0 0" FontSize="30"></TextBlock>
                <TextBox Name="TextBox_Login" Margin="0 5 0 0" FontSize="40"></TextBox>
                <TextBlock Text="Пароль" Margin="0 5 0 0" FontSize="30"></TextBlock>
                <PasswordBox Name="PasswordBox_Password" Margin="0 5 0 0" FontSize="40"></PasswordBox>
                <Button Click="Button_Login_Click" Margin="0 20 0 0" FontSize="40">Войти</Button>
            </StackPanel>
        </Border>
    </Border>
</UserControl>
